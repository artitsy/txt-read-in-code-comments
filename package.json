{
	"name": "txt-read-in-code-comments",
	"publisher": "artitsy",
	"displayName": "TXT Read in Code Comments",
	"description": "Allows you to read TXT in code comments.",
	"version": "2.2.0",
	"icon": "icon.png",
    "keywords": [
        "read",
        "book",
        "看书",
        "阅读",
        "摸鱼",
        "小说"
    ],
	"engines": {
		"vscode": "^1.86.0"
	},
	"categories": [
		"Other"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/artitsy/txt-read-in-code-comments"
	},
	"activationEvents": [
		"onCommand"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "txt-read-in-code-comments.init",
				"title": "read.init"
			},
			{
				"command": "txt-read-in-code-comments.next",
				"title": "read.next"
			},
			{
				"command": "txt-read-in-code-comments.last",
				"title": "read.last"
			},
			{
				"command": "txt-read-in-code-comments.hide",
				"title": "read.hide"
			},
			{
				"command": "txt-read-in-code-comments.turn",
				"title": "read.turn"
			},
            {
                "command": "txt-read-in-code-comments.settings",
                "title": "read.settings"
            }
		],
		"keybindings": [
			{
				"command": "txt-read-in-code-comments.next",
				"key": "Alt+right"
			},
			{
				"command": "txt-read-in-code-comments.last",
				"key": "Alt+left"
			},
			{
				"command": "txt-read-in-code-comments.next",
				"key": "Alt+d"
			},
			{
				"command": "txt-read-in-code-comments.last",
				"key": "Alt+a"
			},
			{
				"command": "txt-read-in-code-comments.hide",
				"key": "Alt+s"
			},
			{
				"command": "txt-read-in-code-comments.turn",
				"key": "Alt+t"
			}
		]
	},
	"scripts": {
		"check": "eslint .",
		"build": "npm run compile&&vsce package",
		"buildpre": "npm run compile&&vsce package --pre-release",
		"compile": "tsc"
	},
	"devDependencies": {
		"@eslint/js": "^9.18.0",
		"@types/chardet": "^1.0.0",
		"@types/fs-extra": "^11.0.4",
		"@types/mocha": "^10.0.6",
		"@types/node": "18.x",
		"@types/vscode": "^1.86.0",
		"@vscode/test-cli": "^0.0.4",
		"@vscode/test-electron": "^2.3.9",
		"eslint": "^8.57.1",
		"eslint-plugin-vue": "^9.32.0",
		"globals": "^15.14.0",
		"typescript": "^5.3.3",
		"typescript-eslint": "^8.20.0",
		"vscode": "^1.1.37"
	},
	"dependencies": {
		"chardet": "^2.0.0",
		"fs-extra": "^11.3.0",
		"iconv-lite": "^0.6.3"
	}
}